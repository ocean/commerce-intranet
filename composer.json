{
    "name": "commerce-wa-ols/commerce-intranet",
    "description": "Drupal powered Intranet for Department of Commerce.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Drew Robinson",
            "email": "drobinson@commerce.wa.gov.au",
            "role": "Developer"
        },
        {
            "name": "Cyrus Eftos",
            "email": "cyrus.eftos@commerce.wa.gov.au",
            "role": "Developer"
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "composer/installers": "^1.0.25",
        "drupal-composer/drupal-scaffold": "~2",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "8.1.*",
        "drush/drush": "~8",
        "drupal/console": "~0.11",
        "drush/config-extra": "^1.0",
        "drupal/admin_toolbar": "~1.16",
        "drupal/adminimal_theme": "^1.1",
        "drupal/devel": "1.x-dev",
        "drupal/adminimal_admin_toolbar": "^1.3",
        "drupal/authorization": "1.x-dev",
        "drupal/ldap": "3.x-dev",
        "drupal/feeds": "3.x-dev",
        "drupal/entity": "1.x-dev"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "simpletest/simpletest": "^1.1",
        "symfony/css-selector": "2.7.*",
        "behat/mink-zombie-driver": "^1.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "sh ./scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/ldap": {
                "Lengthen admin page input field for 'binddn' property.": "patches/ldap-lengthen_admin_input_field_for_binddn.patch"
            }
        }
    }
}
